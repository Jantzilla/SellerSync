<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sellersync.jantz.sellersync.NewProductFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etRestock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_inventory"/>
        <ListView
            android:id="@+id/lvRestock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textSize="2px"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quantity"
            android:paddingLeft="4dp"/>
        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="@string/enter_quantity"
            android:inputType="number"/>
        <Button
            android:id="@+id/btnRestock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/restock"
            android:textSize="18dp"
            android:textStyle="bold"
            android:paddingStart="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingEnd="32dp"
            android:layout_marginBottom="16dp"
            fontPath="fonts/avenir.ttf"
            tools:ignore="MissingPrefix"/>
    </LinearLayout>
</RelativeLayout>
